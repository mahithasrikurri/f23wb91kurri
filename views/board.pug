extends layout

block content
  h1= title
  p Number of rows #{query.rows} and columns #{query.cols}
  - let rows = Number(query.rows)
  - let col = Number(query.cols)
  if Number.isNaN(rows) || Number.isNaN(col )
    p Rows or Columns is not an integer 
  else if rows>10 || rows<1
    p Rows count should be between 1 and 10
  else if col>10 || col<1
    p Columns count should be between 1 and 10
  else
    table#outer
        - for(let i=0; i<rows; i++) {
          tr#middle
            - for(let j=0;j<col;j++){
              if(i==j)
                td= 1
              else if(i-j == 1)
                td=2
              else if(j-i == 1)
                td=i
              else
                td=0
            -}
        -}